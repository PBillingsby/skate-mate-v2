
<h1><%= @spot.name %></h1><br>
<% @spot.ratings.each do |rating| %>
  Rating: <%= rating.rating %>
<% end %>
<% @spot.image_links.each do |url| %>
  <%= image_tag(url.image_link, width: "500", height: "auto") %>
<% end %>

<%= button_to "Delete #{@spot.name}", spot_path(@spot), data: { confirm: 'Are you certain you want to delete this?' }, method: :delete %>