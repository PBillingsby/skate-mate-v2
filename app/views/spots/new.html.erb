<%= form_for @spot do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :street_address %>
  <%= f.text_field :street_address %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :state %>
  <%= f.text_field :state %>
  <%= f.label :country %>
  <%= f.country_select :country, priority_countries: ["US", "GB", "ES", "AU"], prompt: 'Select a country' %>
  <%= f.fields_for :ratings do |ff| %>
    <%= ff.hidden_field :user_id, :value => current_user.id %>
    <%= ff.label :rating %>
    <%= ff.number_field :rating, step: 0.1 %>
    <%= ff.label :description %>
    <%= ff.text_area :description %>
  <% end %>
  <%= f.file_field :image %>
  <%= f.submit %>
<% end %>